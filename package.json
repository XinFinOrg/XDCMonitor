{
  "name": "xdc-monitor",
  "version": "0.1.0",
  "description": "A Node.js blockchain monitoring system for XDC Network",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:fast": "NODE_ENV=development npx ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/main.ts",
    "start:turbo": "NODE_ENV=development nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node -r tsconfig-paths/register' src/main.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "docker:build": "docker build -t xdc-monitor:latest .",
    "docker:run": "docker run -p 3000:3000 -p 9090:9090 --env-file .env xdc-monitor:latest"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.0.0",
    "@types/ws": "^8.18.0",
    "axios": "^1.8.2",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "node-cron": "^3.0.2",
    "prom-client": "^15.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socket.io-client": "^4.7.2",
    "winston": "^3.11.0",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "webpack": "^5.98.0"
  },
  "author": "XDC Monitor Team",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@blockchain/(.*)$": "<rootDir>/blockchain/$1",
      "^@config/(.*)$": "<rootDir>/config/$1",
      "^@models/(.*)$": "<rootDir>/models/$1",
      "^@monitoring/(.*)$": "<rootDir>/monitoring/$1",
      "^@metrics/(.*)$": "<rootDir>/metrics/$1",
      "^@/(.*)$": "<rootDir>/$1"
    }
  }
}
